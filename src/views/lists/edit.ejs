<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <!-- Navigation -->
    <% include ../static/partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container  ">

        <% include ../static/partials/messages.ejs %>

        <!--  Header -->
        <header class="row centered-form center-block text-center">
          <section class="container col-md-12 col-md-offset-1 text-dark">


        </header>
        <!-- Page Features -->
        <!-- /.row -->
        <section class="row centered-form center-block text-center">

          <section class="container col-md-10 col-md-offset-1 border  rounded p-3 mb-2 bg-secondary text-white"">
            <h2> Edit List </h2>
            <form action="/lists/<%= list.id %>/update" method="post">
              <div class="form-group">
                <label for="title">Title</label>
                <input value="<%= list.title %>" type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <input value="<%= list.description %>" type="text" class="form-control" name="description" aria-describedby="descriptionHelp" placeholder="Enter Description">
              </div>

              <div class="form-group">
                <label for="private">View:</label>
                 <select value="<%= list.private %>" name="private"  id="private">
                   <option value=false>Public</option>
                   <option value=true>Private</option>
                 </select>
              </div>

              <button type="submit" class="btn btn-primary">Submit</button>
            </form>

          </section>
        </section>


      </main>
      <!-- /.container -->

      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>
