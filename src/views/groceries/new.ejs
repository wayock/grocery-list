<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <!-- Navigation -->
    <% include ../static/partials/navbar.ejs %>

      <!-- Page Content -->
      <main class="container  ">

        <% include ../static/partials/messages.ejs %>

        <!--  Header -->
        <header class="row centered-form center-block text-center">
          <section class="container col-md-12 col-md-offset-1 text-dark">

          <div>
            <h1 class="display-3">The Grocery List</h1>

          </div>
        </header>
        <!-- Page Features -->
        <!-- /.row -->
        <section class="row centered-form center-block text-center">

          <section class="container col-md-10 col-md-offset-1 border  rounded p-3 mb-2 bg-info text-white"">
            <h2>New Item</h2>
            <form action="/lists/<%= listId %>/groceries/create" method="post">
              <div class="form-group">
                <label for="item">Grocery Item</label>
                <input type="text" class="form-control" name="item" aria-describedby="itemHelp" placeholder="Enter Item">
                <small class="text-dark" id="itemHelp">Grocery item cannot be empty.</small>
              </div>
              <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control" name="quantity" value="1" min="1" max="10000">
              </div>
              <div class="form-group">
                <label for="note">Note</label>
                <input type="text" class="form-control" name="note" aria-describedby="noteHelp" placeholder="">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>

          </section>
        </section>


      </main>
      <!-- /.container -->

      <% include ../static/partials/baseScripts.ejs %>
    </body>
</html>
